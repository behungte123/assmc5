@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap');

    body {
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        background: #f6f5ef;
    }

    /* Background pattern */
    .login-bg {
        min-height: 100vh;
        background: repeating-radial-gradient( circle at 0 0, rgba(0,0,0,0.03) 0, rgba(0,0,0,0.03) 40px, transparent 40px, transparent 80px );
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Card */
    .login-card {
        background: #fbfaf4;
        border-radius: 22px;
        padding: 40px 45px;
        width: 380px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        text-align: center;
    }

    /* === TITLE GIỐNG REGISTER === */
    .login-title {
        font-weight: 600;
        letter-spacing: 4px;
        font-size: 26px;
        color: transparent;
        -webkit-text-stroke: 1.2px #9a9a95;
        text-stroke: 1.2px #9a9a95;
        text-shadow: 0 1px 0 rgba(255,255,255,0.6);
        margin-bottom: 35px;
    }

    /* Inputs */
    .login-card .form-control {
        border-radius: 14px;
        border: 1px solid #ddd;
        padding: 14px 15px;
        font-size: 14px;
    }
    /* Title giống ĐĂNG KÝ */
    .login-title {
        font-weight: 600;
        letter-spacing: 4px;
        font-size: 26px;
        color: #9a9a95;
        opacity: 0.9;
        margin-bottom: 35px;
    }


    /* Button */
    .login-card button {
        border-radius: 14px;
        background: #b9b9b4;
        border: none;
        color: white;
        padding: 12px;
        font-weight: 500;
        letter-spacing: 1px;
    }

        .login-card button:hover {
            background: #a8a8a3;
        }

    /* Links */
    .login-links a {
        font-size: 13px;
        color: #777;
        text-decoration: none;
    }

        .login-links a:hover {
            text-decoration: underline;
        }

    /* External login */
    .external-login button {
        border-radius: 12px;
        margin-top: 10px;
        width: 100%;
    }
</style>

<div class="login-bg">
    <div class="login-card">

        <h2 class="login-title">ĐĂNG NHẬP TÀI KHOẢN</h2>

        <form method="post" id="account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="Email" />
                <label asp-for="Input.Email">Username</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="current-password"
                       placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3 text-start">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Remember me
                </label>
            </div>

            <button type="submit" class="w-100 mb-3">LOGIN</button>

            <div class="login-links">
                <p>
                    <a asp-page="./ForgotPassword">Forgot username/password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        Create new account
                    </a>
                </p>
            </div>
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr />
            <form asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                  class="external-login">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit"
                            name="provider"
                            value="@provider.Name">
                        Login with @provider.DisplayName
                    </button>
                }
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
