@using lab4.Models
@model PurchaseOrder

<h2>Tạo đơn đặt hàng</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Nhà cung cấp</label>
        <select asp-for="SupplierId" class="form-select">
            @foreach (var s in ViewBag.Suppliers)
            {
                <option value="@s.Id">@s.Name</option>
            }
        </select>
    </div>

    <h4>Danh sách hàng</h4>

    <table class="table" id="items">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá nhập</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select name="Items[0].ProductId" class="form-select">
                        @foreach (var p in ViewBag.Products)
                        {
                            <option value="@p.Id">@p.Name</option>
                        }
                    </select>
                </td>
                <td>
                    <input name="Items[0].QuantityOrdered" type="number" class="form-control" />
                </td>
                <td>
                    <input name="Items[0].UnitPrice" type="number" step="0.01" class="form-control" />
                </td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-success">Tạo đơn</button>
</form>
