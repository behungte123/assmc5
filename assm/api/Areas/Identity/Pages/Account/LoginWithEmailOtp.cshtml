@page
@model LoginWithEmailOtpModel
@{
    ViewData["Title"] = "Email OTP Verification";
}

<h2>Email OTP Verification</h2>

<p>
    We have sent a one-time password (OTP) to your email.
    Please enter the code below to continue.
</p>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Code"></label>
        <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="Input.RememberMachine" />
                Remember this machine
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        Verify
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
