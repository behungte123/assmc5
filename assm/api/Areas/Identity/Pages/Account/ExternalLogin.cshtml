@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap');

    body {
        margin: 0;
        font-family: 'Montserrat', sans-serif;
        background: #f6f5ef;
    }

    .ext-bg {
        min-height: 100vh;
        background: repeating-radial-gradient( circle at 0 0, rgba(0,0,0,0.03) 0, rgba(0,0,0,0.03) 40px, transparent 40px, transparent 80px );
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .ext-card {
        background: #fbfaf4;
        border-radius: 22px;
        padding: 40px 45px;
        width: 420px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.15);
        text-align: center;
    }

    .ext-title {
        font-weight: 600;
        letter-spacing: 4px;
        font-size: 24px;
        color: #9a9a95;
        margin-bottom: 25px;
    }

    .ext-desc {
        font-size: 14px;
        color: #666;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .form-control {
        border-radius: 14px;
        border: 1px solid #ddd;
        padding: 14px 15px;
        font-size: 14px;
    }

    .submit-btn {
        margin-top: 15px;
        width: 100%;
        border-radius: 14px;
        background: #333;
        color: #fff;
        padding: 12px;
        border: none;
        font-weight: 500;
        letter-spacing: 1px;
    }

        .submit-btn:hover {
            background: #111;
        }
</style>

<div class="ext-bg">
    <div class="ext-card">

        <div class="ext-title">
            LIÊN KẾT @Model.ProviderDisplayName
        </div>

        <div class="ext-desc">
            Bạn đã đăng nhập thành công bằng
            <strong>@Model.ProviderDisplayName</strong>.
            <br />
            Vui lòng nhập email để hoàn tất việc đăng ký.
        </div>

        <form asp-page-handler="Confirmation"
              asp-route-returnUrl="@Model.ReturnUrl"
              method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="email"
                       placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">
                HOÀN TẤT ĐĂNG KÝ
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
